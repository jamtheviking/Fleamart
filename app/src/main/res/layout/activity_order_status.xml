<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".features.TransactionsPage">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="5dp"
        android:background="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Order Status"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btnSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnSales"
            style="@style/button_style_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:text="@string/btnSales"
            />

        <Button
            android:id="@+id/btnOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnOrders"
            android:text="@string/btnOrders"
            style="@style/button_style_gray"
            android:layout_marginEnd="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
             />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSaleTransactions"
        android:layout_width="408dp"
        android:layout_height="445dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBuyerTransactions"
        android:layout_width="408dp"
        android:layout_height="445dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="38dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        tools:visibility="invisible" />



</androidx.constraintlayout.widget.ConstraintLayout>