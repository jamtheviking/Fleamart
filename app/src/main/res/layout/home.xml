<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.HomePage"
    android:background="@color/green">
<!--    //TODO: Add Drawable Icons-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/pageLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/imgLogo"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pageLogo"
            android:layout_alignTop="@id/pageLogo"
            android:layout_marginStart="20dp"
            android:text="Welcome"
            style="@style/title_style"
            />


        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pageLogo"
            style="@style/normal_style"
            android:text="John Smith"
            android:textSize="25sp"
            android:layout_alignStart="@id/txtWelcome"
            android:layout_below="@id/txtWelcome"
            />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/button_style_gray"
            android:gravity="center"
            android:text="@string/txtHomeBuy"
            android:layout_below="@id/tvFullName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/btnSell"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/button_style_gray"
            android:gravity="center"
            android:text="@string/txtHomeSell"
            android:layout_below="@id/btnBuy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/btnTransactions"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/button_style_gray"
            android:gravity="center"
            android:text="@string/txtHomeTr"
            android:layout_below="@id/btnSell"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/button_style_gray"
            android:gravity="center"
            android:text="@string/txtHomeUpdate"
            android:layout_below="@id/btnTransactions"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/button_style_gray"
            android:gravity="center"
            android:text="@string/txtHomeLogout"
            android:layout_below="@id/btnUpdate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

