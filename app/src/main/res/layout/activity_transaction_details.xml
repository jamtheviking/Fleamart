<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.TransactionDetailsPage"
    android:paddingVertical="40dp"
    android:background="@color/green">

    <ImageView
        android:id="@+id/ivItemImage_Transaction"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTransactionIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTransactionIdLabel"
        android:layout_below="@id/ivItemImage_Transaction"
        android:layout_alignStart="@id/ivItemImage_Transaction"
         />
    <TextView
        android:id="@+id/tvTransactionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/tvTransactionIdLabel"
        android:layout_alignTop="@id/tvTransactionIdLabel"/>

    <TextView
        android:id="@+id/tvBuyerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tvBuyerNameLabel"
        android:layout_below="@id/tvTransactionIdLabel"
        android:layout_alignEnd="@id/tvTransactionIdLabel"
         />

    <TextView
        android:id="@+id/tvBuyerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvBuyerNameLabel"
        android:layout_alignTop="@+id/tvBuyerNameLabel"
        android:layout_marginStart="30dp"
         />

    <TextView
        android:id="@+id/tvItemNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvItemNameLabel"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvBuyerNameLabel"
        android:layout_alignEnd="@id/tvTransactionIdLabel"
         />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvItemNameLabel"
        android:layout_alignTop="@+id/tvItemNameLabel"
        android:layout_marginStart="30dp"

        />


    <TextView
        android:id="@+id/tvItemPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvItemPriceLabel"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvItemNameLabel"
        android:layout_alignEnd="@id/tvTransactionIdLabel" />

    <TextView
        android:id="@+id/tvItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvItemPriceLabel"
        android:layout_alignTop="@+id/tvItemPriceLabel"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/tvItemStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="@string/tvItemStatusLabel"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvItemPriceLabel"
        android:layout_alignEnd="@id/tvTransactionIdLabel" />
    <TextView
        android:id="@+id/tvItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvTransactionStatusLabel"
        android:layout_alignTop="@+id/tvTransactionStatusLabel"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/tvPickUpDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/tvItemStatusLabel"
        android:layout_alignTop="@+id/tvItemStatusLabel" />



    <TextView
        android:id="@+id/tvTransactionStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTransactionStatus"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvItemStatusLabel"
        android:layout_alignEnd="@id/tvTransactionIdLabel" />


    <Button
        android:id="@+id/btnSendNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSendNotification"
        style="@style/button_style_gray"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>