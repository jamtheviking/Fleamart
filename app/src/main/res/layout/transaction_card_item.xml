<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/custom_cardview_edit"
    android:clipToOutline="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_Transactions"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textBuyer"
        style="@style/normal_style_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView_Transactions"
        android:layout_toEndOf="@id/imageView_Transactions" />

    <TextView
        android:id="@+id/txtSeller"
        style="@style/normal_style_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView_Transactions"
        android:layout_toEndOf="@id/imageView_Transactions"
        android:text="Seller: "
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtBuyerID_Transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textBuyer"
        android:layout_alignTop="@id/imageView_Transactions"
        style="@style/normal_style_silver"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item: "
        style="@style/normal_style_silver"
        android:layout_below="@id/textBuyer"
        android:layout_toEndOf="@id/imageView_Transactions"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtItemName_Transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textBuyer"
        style="@style/normal_style_silver"
        android:layout_toEndOf="@id/textItemName"

         />

    <TextView
        android:id="@+id/txtItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        style="@style/normal_style_silver"
        android:layout_below="@id/textItemName"
        android:layout_toEndOf="@id/imageView_Transactions"/>


    <TextView
        android:id="@+id/txtStatus_Transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtItemStatus"
        android:layout_below="@+id/txtItemName_Transactions"
        style="@style/normal_style_silver"
         />

    <ImageView
        android:id="@+id/newItem"
        android:layout_width="71dp"
        android:layout_height="88dp"
        android:layout_marginLeft="193dp"
        android:layout_toRightOf="@id/imageView_Transactions"
        android:contentDescription="when new Item is added"
        android:visibility="invisible"
        app:srcCompat="@drawable/purchased_notification" />

</RelativeLayout>