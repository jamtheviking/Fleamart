<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/custom_cardview_edit"
    android:clipToOutline="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_Transactions"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textBuyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buyer: "
        style="@style/normal_style_silver"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtBuyerID_Transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textBuyer"
        style="@style/normal_style_silver"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtItemName_Transactions"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtBuyerID_Transactions"
        android:layout_alignEnd="@id/imageView_Transactions"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-130dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtStatus_Transactions"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtItemName_Transactions"
        android:layout_alignEnd="@id/imageView_Transactions"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-130dp"
        android:textSize="20sp" />
</RelativeLayout>