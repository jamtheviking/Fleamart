<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="button_style">
        <item name="android:background">@drawable/button_shadow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    //Gray button style
    <style name="button_style_gray" parent="button_style">
        <item name="backgroundTint">@color/silver</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>
    //Green button style
    <style name="button_style_green" parent="button_style">
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>
    //Edit text
    <style name="edit_text_black">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="android:gravity">center</item>

    </style>
    //Sell Edit Text
    <style name="edit_text_silver" parent="edit_text_black">
        <item name="android:background">@drawable/customer_edit_text_silver</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:gravity">start|top</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:inputType">text</item>
        <item name="textInputStyle">@style/normal_style</item>


    </style>



    //Style for Title
    <style name="title_style">
        <item name="fontFamily">Jost</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    //Normal Text
    <style name="normal_style">
        <item name="fontFamily">Jost</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    //Sell Item text
    <style name="normal_style_silver" parent="normal_style">
        <item name="fontFamily">Jost</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    //Recycler Notification
    <style name="NotificationStyle">
        <item name="android:background">@drawable/notification_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


</resources>

