<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="button_style">
        <item name="android:background">@drawable/button_shadow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>

        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    //Gray button style
    <style name="button_style_gray" parent="button_style">
        <item name="backgroundTint">@color/silver</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="edit_text_black">
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="android:gravity">center</item>

    </style>

    //Style for Title
    <style name="title_style">
        <item name="fontFamily">Jost</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    //Normal Text
    <style name="normal_style">
        <item name="fontFamily">Jost</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    //Transparent top menu bar style (applied in manifest)
    <style name="AppTheme.TransparentActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


</resources>

